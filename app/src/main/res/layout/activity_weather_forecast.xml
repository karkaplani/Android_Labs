<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherForecast">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/currentTemp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/weatherImage"
            android:text="Current temperature: "
            />

        <TextView
            android:id="@+id/minTemp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/weatherImage"
            android:layout_below="@+id/currentTemp"
            android:text="Minimum temperature: "
            />

        <TextView
            android:id="@+id/maxTemp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/weatherImage"
            android:layout_below="@+id/minTemp"
            android:text="Maximum temperature: "
            />

        <TextView
            android:id="@+id/uvRating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/weatherImage"
            android:layout_below="@+id/maxTemp"
            android:text="UV rating: "
            />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/weatherImage"
            android:layout_below="@id/uvRating"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>